<section class="contact-home">
    <div class="conatct-banner" style="width: 100%;">
        <img src="/images/image/76d2f5_8a2ad2878ca047e1aa60a0bd2e2346bc~mv2.avif" alt="" width="100%">
        <div class="contact-overlay">
            <div class="card">
                <div class="contact-title">
                    <h1>Contact Us</h1>
                    <div class="underscore"></div>
                </div>
                <div class="some-text">
                    <span>
                        Contact us today to get the best quality granite for your site. Our experts will help you choose the perfect granite for your project and provide a free in-home consultation. We provide our services in PHNOM PENH, CAMBODIA
                    </span>
                </div>
                <div class="contact-now-btn">
                    <a href="#">Contact Now</a>
                </div>
            </div>
        </div>
    </div>

    <div class="contact-container">
        <div class="form-section">
            <h2>Let's get started</h2>
            <form action="#" method="post">
                <div class="group-1">
                    <div class="input-group">
                        <label for="first-name">First name</label>
                        <input type="text" id="first-name" name="first-name" placeholder="Your First Name">
                    </div>
                    <div class="input-group">
                        <label for="last-name">Last name</label>
                        <input type="text" id="last-name" name="last-name" placeholder="Your Last Name">
                    </div>
                </div>
                <div class="input-group">
                    <label for="email">Email *</label>
                    <input type="email" id="email" name="email" placeholder="e.g., email@example.com" required>
                </div>
                <div class="input-group">
                    <label for="phone">Phone</label>
                    <input type="tel" id="phone" name="phone" placeholder="Insert your phone number here">
                </div>
                <div class="input-group">
                    <label for="subject">Subject</label>
                    <input type="text" id="subject" name="subject" placeholder="Insert Subject Here">
                </div>
                <div class="input-group">
                    <label for="message">Write a message *</label>
                    <textarea id="message" name="message" placeholder="Type your message here..." required></textarea>
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
        <div class="contact-info">
            <h2>Contact Us</h2>
            <div class="contact-item">
                <img src="/images/image/email-b.png" alt="Email Icon">
                <p>Send E-Mail<br>info@indmk.com</p>
            </div>
            <div class="contact-item">
                <img src="/images/image/whatsapp-b.png" alt="WhatsApp Icon">
                <p>WhatsApp<br>+855 66 749009</p>
            </div>
            <div class="contact-item">
                <img src="/images/image/telegram-b.png" alt="Telegram Icon">
                <p>Call/Telegram<br>(+855) 17 345546<br>(+855) 97 4128382</p>
            </div>
            <div class="contact-item">
                <img src="/images/image/location-b.png" alt="Location Icon">
                <p>Our Location<br>1123 Street, Thanol Village, Svaychras Commune, Snoul District, Kratie Province
                    Cambodia</p>
            </div>
        </div>
    </div>
</section>